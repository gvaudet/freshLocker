{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - FreshLocker{% endblock %}

{% block body %}
<h2>Je passe ma commande</h2>

<div class="row">
    <div class="col-md-6">

        {% set formHtml %}

            {{ form_start(form, {action:path('order_recap')}) }}
                {{ form_label(form.adresse, 'Choisissez votre adresse de facturation') }}
                <a href="{{ path('address_add') }}" class="btn btn-success">Ajouter une adresse</a>
            {{ form_end(form) }}

        {% endset %}

        {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
    </div>
    <div class="col-md-6">
        <p>Récap de ma commande</p>

    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Price</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in cart %}
                <tr>
                    <td>{{ item.product.label}}</td>
                    <td>{{ item.product.unitPrice}}</td>
                    <td>
                        <p>{{ item.quantity}}</p>
                    <td> {{ item.product.unitPrice * item.quantity}}</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total :</td>
                <td>{{ total }}</td>
                </td>
            </tr>
        </tfoot>
    </table>
    </div>
</div>
{% endblock %}
